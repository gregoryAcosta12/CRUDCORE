@model CRUDCORE.Models.ViewModels.EmpleadoVM

@{
    ViewData["Title"] = "Empleado_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">
            @(Model.oEmpleado.IdEmpleado == 0 ? "Crear Empleado" : "Editar Empleado")
        </h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-sm-6">
            <div class="card shadow custom-card">
                <div class="card-body">
                    <form asp-action="Empleado_Detalle" asp-controller="Home" method="post">
                        <input type="hidden" asp-for="oEmpleado.IdEmpleado" />

                        <div class="mb-3">
                            <label class="form-label" asp-for="oEmpleado.NombreCompleto">Nombre completo</label>
                            <input class="form-control form-control-lg" asp-for="oEmpleado.NombreCompleto" type="text" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label" asp-for="oEmpleado.Correo">Correo</label>
                            <input class="form-control form-control-lg" asp-for="oEmpleado.Correo" type="email" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label" asp-for="oEmpleado.Telefono">Teléfono</label>
                            <input class="form-control form-control-lg" asp-for="oEmpleado.Telefono" type="tel" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label" asp-for="oEmpleado.IdCargo">Cargo</label>
                            <select class="form-select form-select-lg" asp-for="oEmpleado.IdCargo" asp-items="@Model.oListaCargo">
                                <option selected disabled>-- Seleccionar --</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button class="btn btn-primary btn-lg" type="submit">
                                @(Model.oEmpleado.IdEmpleado == 0 ? "Crear" : "Actualizar")
                            </button>
                            <a class="btn btn-secondary btn-lg" asp-action="Index" asp-controller="Home">Volver</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

