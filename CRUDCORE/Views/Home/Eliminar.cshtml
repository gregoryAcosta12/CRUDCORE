@model CRUDCORE.Models.Empleado

<!-- En tu archivo Razor (.cshtml) -->
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/site.css">

<div class="container">
    <h3>¿Está seguro de eliminar el empleado?</h3>
    <hr />

    <div class="row">
        <div class="col-sm-6">
            <form asp-action="Eliminar" asp-controller="Home" method="post">
                <input type="hidden" asp-for="IdEmpleado" />

                <div class="form-group">
                    <label asp-for="NombreCompleto">Nombre completo</label>
                    <input class="form-control" asp-for="NombreCompleto" disabled />
                </div>

                <div class="form-group">
                    <label asp-for="Correo">Correo</label>
                    <input class="form-control" asp-for="Correo" disabled />
                </div>

                <div class="form-group">
                    <label asp-for="Telefono">Teléfono</label>
                    <input class="form-control" asp-for="Telefono" disabled />
                </div>

                <div class="form-group">
                    <label asp-for="IdCargo">Cargo</label>
                    <input class="form-control" asp-for="oCargo.Descripcion" disabled />
                </div>

                <div class="form-group">
                    <button class="btn btn-danger" type="submit">Eliminar</button>
                    <a class="btn btn-secondary" asp-action="Index" asp-controller="Home">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>
