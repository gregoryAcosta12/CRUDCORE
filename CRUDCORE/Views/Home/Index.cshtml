@model List<CRUDCORE.Models.Empleado>
@{
    ViewData["Title"] = "Lista de Empleados";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Lista de Empleados</h1>
        <p>Gestión de empleados con funcionalidades para crear, editar y eliminar registros.</p>
        <a class="btn btn-success btn-lg custom-btn" asp-action="Empleado_Detalle" asp-controller="Home" asp-route-idEmpleado="0">
            <i class="fas fa-user-plus"></i> Crear Nuevo Empleado
        </a>
    </div>

    <div class="card shadow custom-card">
        <div class="card-header bg-primary text-white">
            <h5>Empleados Registrados</h5>
        </div>
        <div class="card-body">
            <table class="table table-hover table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Nombre Completo</th>
                        <th>Correo</th>
                        <th>Teléfono</th>
                        <th>Cargo</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NombreCompleto</td>
                            <td>@item.Correo</td>
                            <td>@item.Telefono</td>
                            <td>@item.oCargo.Descripcion</td>
                            <td class="text-center">
                                <a class="btn btn-primary btn-sm" asp-action="Empleado_Detalle" asp-controller="Home" asp-route-idEmpleado="@item.IdEmpleado">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="Eliminar" asp-controller="Home" asp-route-idEmpleado="@item.IdEmpleado" onclick="return confirm('¿Está seguro de eliminar este empleado?');">
                                    <i class="fas fa-trash-alt"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

